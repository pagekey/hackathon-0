{
    "manifest_version": 3,
    "name": "Email Agent",
    "version": "1.0",
    "description": "Gmail API Extension",
    "permissions": [
      "identity",
      "webRequest",
      "tabs"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "host_permissions": [
      "http://0.0.0.0:8000/*",
      "https://mail.google.com/*"
    ],
    "content_scripts": [
      {
        "run_at": "document_end",
        "matches": [
          "https://mail.google.com/*"
        ],
        "js": [
          "deps/jquery.js",
          "deps/gmail.js",
          "content.js"
        ]
      }
    ],
    "background": {
      "service_worker": "service_worker.js",
      "type": "module"
    },
    "oauth2": {
      "client_id": "<clientid>",
      "scopes": [
        "https://www.googleapis.com/auth/gmail.modify"
      ]
    }
  }
