{
    "manifest_version": 3,
    "name": "Email Agent",
    "version": "1.0",
    "description": "Gmail API Extension",
    "permissions": [
      "identity",
      "webRequest",
      "tabs"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "host_permissions": [
      "*://*.google.com/*",
      "http://0.0.0.0:8000/*",
      "https://mail.google.com/*"
    ],
    "background": {
      "base64": "base64.js",
      "background": "background.js"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'"
    },
    "oauth2": {
      "client_id": "<clientid>",
      "scopes": [
        "https://www.googleapis.com/auth/gmail.modify"
      ]
    }
  }
